{{!< default}} 
<div class="content-card page-card">
    <h1 class="page-title">Essays</h1>
        {{#post}}
    <div class="text-align-center">{{content}}</div>
    <hr/>
    {{/post}}
    {{#get "posts" include="tags,authors" limit="all"}}
    {{#if posts}}
    <div class="posts">
        {{#foreach posts}}
        {{> post-preview-card}}
        {{/foreach}}
    </div>
    {{/if}}
    {{/get}}
</div>